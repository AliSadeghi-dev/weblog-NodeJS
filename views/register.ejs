<form class="form-signin" action="/users/register" method="POST">
    <h1 class="h3 mb-3 font-weight-normal">ثبت نام کاربر   </h1>
    <%- include("./includes/messages.ejs")%> 
  <label for="inputEmail"> نام و نام خانوادگی</label>
  <input
    type="text"
    name="fullname"
    autofocus
    id="inputEmail"
    class="form-control"
    placeholder=" نام و نام خانوادگی "
    required
    autofocus
  />
  <label for="inputEmail"> آدرس ایمیل</label>
  <input
    type="email"
    name="email"
    id="inputEmail"
    class="form-control"
    placeholder=" آدرس ایمیل"
    required
    autofocus
  />
  <label for="inputPassword">رمز عبور</label>
  <input
  name="password"
    type="password"
    id="inputPassword"
    class="form-control mb-2"
    placeholder="رمز عبور"
    required
  />
  <label for="inputConfirmPassword"> تکرار رمز عبور</label>
  <input
    name="confirmPassword"
    type="password"
    id="inputConfirmPassword"
    class="form-control"
    placeholder="تکرار رمز عبور"
    required
  />
  <div class="checkbox mb-3">
    <label>
      <a href="/users/login">اکانت کاربری دارم</a>
    </label>
  </div>
  <button class="btn btn-lg btn-primary btn-block" type="submit">ثبت نام</button>
</form>
